<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    android:id="@+id/home_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        >

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_sudoku_icon"/>
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="25dp"-->
<!--            android:text="Sudoku"-->
<!--            android:textColor="?colorPrimary"-->
<!--            android:textStyle="bold"-->
<!--            android:textAlignment="center"-->
<!--            />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_new_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_home_button"
            android:layout_marginEnd="@dimen/margin_horizontal_home_button"
            android:background="@drawable/main_button_accent"
            android:text="@string/text_new_game_home"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_home_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_resume_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_home_button"
            android:layout_marginTop="@dimen/margin_top_home_button"
            android:layout_marginEnd="@dimen/margin_horizontal_home_button"
            android:background="@drawable/main_button"
            android:text="@string/text_resume_game"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_home_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_home_button"
            android:layout_marginTop="@dimen/margin_top_home_button"
            android:layout_marginEnd="@dimen/margin_horizontal_home_button"
            android:background="@drawable/main_button"
            android:text="@string/text_rate_app"
            android:textColor="?attr/colorMainPageText"
            android:textSize="@dimen/text_size_home_button" />
    </LinearLayout>
</LinearLayout>