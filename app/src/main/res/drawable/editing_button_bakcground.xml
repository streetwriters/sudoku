<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >

            <solid
                android:color="#C9C7C7"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item  android:state_pressed="false">
        <shape >

            <solid
                android:color="#00FFFFFF"/>

            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>